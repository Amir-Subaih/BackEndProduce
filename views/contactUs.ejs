<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Custom CSS -->
    <style>
        body {
    background: linear-gradient(to bottom right, #2fdbca, #8df13c);
    background-size: cover;
    background-repeat: no-repeat;
    background-attachment: fixed;
    height: 100vh;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Arial', sans-serif;
    }
    .form-control {
        border-radius: 15px;
    }
    .bg-l {
        background:  linear-gradient(to bottom right, #571263, #701c2f);
        color: #fff;
    }

    </style>
    <title>Contact Us Form</title>
</head>

<body class="bg-info mb-5 d-flex justify-content-center ">

    <div class="w-50 bg-l rounded p-3 d-flex flex-column align-items-center">
        <h3 class="mb-3">Contact Us</h3>
        <form action="#" method="post" class="w-100">
            <label for="name" class="form-label"><span class="p-2">Name:</span></label>
            <input type="text" class="form-control" id="name" name="name" required><br><br>
    
            <label for="email" class="form-label"><span class="p-2">Email:</span></label>
            <input type="email" class="form-control" id="email" name="email" required><br><br>
    
            <label for="message" class="form-label"><span class="p-2">Message:</span></label><br>
            <textarea id="message" class="form-control" name="message" rows="4" required></textarea><br><br>
    
            <button type="submit" class="btn btn-warning form-control">Send</button>
        </form>
        <% if (typeof successMessage !== 'undefined' && successMessage !== null) { %>
            <div class="alert alert-success mt-3" role="alert" id="successAlert">
                <%= successMessage %>
            </div>
        <% } %>
    </div>
    

    <!-- jQuery and Bootstrap JS -->
    <script>
        // Wait for the document to be fully loaded
        document.addEventListener('DOMContentLoaded', function () {
            // Select the success alert element
            const successAlert = document.getElementById('successAlert');
    
            // Check if the success alert element exists
            if (successAlert) {
                // Hide the success alert after 5 seconds
                setTimeout(function () {
                    successAlert.style.display = 'none';
                }, 5000); // 5 seconds in milliseconds
            }
        });
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>
